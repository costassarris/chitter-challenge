<div id="new-peep">
  <% if current_user %>
  <form action="/peeps" method="post">
    Peep: <input type="text" name="content">
    <input type="submit" value="Post Peep">
  </form>
  <% end %>
  <br>
  <br>
</div>

<div id="image">
  <img src='/images/orange_speech_bubble.jpg' style="width:55%; height: 55%">
</div>

<ul id="peep-list">
  <% @peeps.each do |peep| %>
    <li>
      <p><%= peep.content %></p>
      <p><small><%= peep.user %> <%= peep.created_at %></small></p>
      <br>
    </li>
  <% end %>
</ul>